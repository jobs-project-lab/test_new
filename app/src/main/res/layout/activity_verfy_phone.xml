<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".verfy_phone">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/layout_bottom_radius"
        android:paddingBottom="40dp"
        android:paddingTop="40dp"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:src="@drawable/ic_phone_verfy"
            android:layout_marginBottom="10dp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="تأكيد الرقم"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="40sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" إرسال رمز التأكيد الى الرقم: "
            android:textColor="@color/primary"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_marginBottom="20dp"
            android:id="@+id/phone_text"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="أدخل رمز التأكيد"
            android:textColor="@color/primary"
            />
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            >
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="أدخل رمز التأكيد الذي وصلك هنا"
                android:textColor="@color/primary"/>
        </com.google.android.material.textfield.TextInputLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="جار الإرسال...."
            android:textSize="15sp"
            android:textColor="@color/primary"
            android:layout_marginBottom="10dp"
            android:id="@+id/code_status"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="تأكيد"
            android:background="@drawable/login_botton"
            android:textColor="@color/white"
            />
    </LinearLayout>
</LinearLayout>
</RelativeLayout>